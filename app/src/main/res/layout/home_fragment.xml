<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:flatui="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="@dimen/activity_vertical_margin">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="0.5">

            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/phone_ic"
                android:layout_gravity="center"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.1"
                android:textSize="20sp"
                android:text="Phone"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:singleLine="true"
                android:gravity="center_vertical"/>


            <com.cengalabs.flatui.views.FlatToggleButton
                android:layout_width="96dp"
                android:layout_height="48dp"
                android:checked="true"
                flatui:fl_space="18dp"
                flatui:fl_cornerRadius="24dp"
                android:text="New ToggleButton"
                android:id="@+id/phoneToggleButton"
                android:layout_gravity="center"
                />


        </LinearLayout>




        <!--<ToggleButton-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="0dp"-->
            <!--android:layout_weight="0.4"-->
            <!--android:text="New ToggleButton"-->
            <!--android:id="@+id/phoneToggleButton" />-->



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="0.5">

            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/message_ic"
                android:layout_gravity="center"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.1"
                android:textSize="20sp"
                android:text="All Notifiction"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:singleLine="true"
                android:gravity="center_vertical"/>


            <com.cengalabs.flatui.views.FlatToggleButton
                android:layout_width="96dp"
                android:layout_height="48dp"
                android:checked="true"
                flatui:fl_space="18dp"
                flatui:fl_cornerRadius="24dp"
                android:text="New ToggleButton"
                android:id="@+id/notiToggleButton"
                android:layout_gravity="center"
                />


        </LinearLayout>

    </LinearLayout>

</FrameLayout>